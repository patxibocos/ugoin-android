<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Times">
        <EditTextPreference
            android:defaultValue="Patxi Contador is at"
            android:inputType="text"
            android:key="CUSTOM_MESSAGE_KEY"
            android:singleLine="true"
            android:summary="Message text to send through Telegram"
            android:title="Custom message" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Times">

        <EditTextPreference
            android:defaultValue="30"
            android:inputType="number"
            android:key="ALARM_INTERVAL_KEY"
            android:singleLine="true"
            android:summary="Notify interval time in minutes"
            android:title="Notify interval" />

        <EditTextPreference
            android:defaultValue="5"
            android:inputType="number"
            android:key="ALARM_INTERVAL_ERROR_KEY"
            android:singleLine="true"
            android:summary="Minutes to wait when an error occurs"
            android:title="Retry delay" />

    </PreferenceCategory>

</PreferenceScreen>